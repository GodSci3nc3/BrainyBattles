<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="20dp"


    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="25dp"
            android:text="Regresar"
            app:backgroundTint="@null"
            android:background="@drawable/navy_gradient"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"



            android:padding="8dp"
            android:text="Cambios en el perfil de usuario:"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:padding="8dp"


            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:text="Los cambios ser치n guardados luego de ingresar su contrase침a.  \n\nEs posible que demore un momento en reflejar los cambios en la aplicaci칩n"/>


        <TextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:padding="8dp"

            android:textStyle="bold"

            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:text="Mensaje de aviso y advertencia"/>


        <TextView
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:padding="8dp"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:text="Por temas de seguridad, requerimos de su contrase침a para poder asegurar su identidad y personalizar sus datos"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="300dp"
            android:layout_height="60dp"

            android:background="@drawable/edittext_forms_background"
            android:drawableStart="@mipmap/without_photo_icon"
            android:drawablePadding="10dp"

            android:layout_margin="10dp"


            android:ems="10"
            android:hint="@string/change"
            android:textColorHint="?attr/titles"
            android:paddingStart="10dp"/>

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="300dp"
            android:layout_height="60dp"

            android:background="@drawable/edittext_forms_background"
            android:drawableStart="@mipmap/password"
            android:drawablePadding="10dp"

            android:layout_margin="10dp"


            android:ems="10"
            android:hint="@string/pass"
            android:textColorHint="?attr/titles"
            android:paddingStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">



            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                app:backgroundTint="@null"
                android:background="@drawable/navy_gradient"
                android:text="Continuar"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>