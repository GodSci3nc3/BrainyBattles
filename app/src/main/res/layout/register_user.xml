<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUserActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_gravity="center"
            android:translationY="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="82dp"
                android:layout_marginRight="32dp"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/orange"
                android:layout_height="wrap_content"
                android:text="Bienvenido a \nBrainyBattles" />

            <EditText
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:drawableStart="@mipmap/name"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:textColorHint="#756c6c"
                android:hint="@string/nombre"
                android:inputType="text"
                android:translationY="-60dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:drawableStart="@mipmap/email"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:textColorHint="#756c6c"
                android:hint="@string/correo"
                android:inputType="textEmailAddress"
                android:translationY="-60dp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="300dp"
                android:layout_height="58dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:drawableStart="@mipmap/password"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:textColorHint="#756c6c"
                android:hint="@string/pass"
                android:inputType="text"
                android:translationY="-60dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/darkblue_background"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_margin="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes una cuenta? Inicia sesión aquí" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>