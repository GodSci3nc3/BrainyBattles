<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity"
    android:padding="0dp"
    android:background="#FAFAFA">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/space_background_magenta" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/back_button_background"
            android:padding="16dp"
            android:src="@mipmap/back"

            android:layout_margin="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="#FFFFFF"

            android:contentDescription="@string/setting"/>

        <ImageView
            android:id="@+id/avatarSelected"
            android:layout_width="70dp"
            android:layout_height="match_parent"

            android:padding="0dp"
            android:src="@mipmap/blue_men1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:fontFamily="@font/play"
            android:gravity="center"
            android:text="Nombre del Usuario"
            android:textColor="#FFFFFF"
            android:textSize="28sp"

            android:textStyle="bold"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/avatarSelected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Sección de Estadísticas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_statistics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/background"
            android:padding="16dp">

            <TextView
                android:id="@+id/statistics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Estadísticas"
                android:textSize="40sp"
                android:textStyle="bold"

                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quizzes jugados:"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/statistics_questionnaires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas contestadas:"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/statistics_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntaje total:"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/statistics_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"
                android:paddingBottom="4dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Sección de Logros -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_achievements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/card_statistics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity=""
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/achievements_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:text="Logros"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"

                android:layout_margin="10dp"

                android:padding="8dp" />

            <TextView
                android:id="@+id/achievementFirstQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:text="Has terminado tu primer cuestionario"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"

                android:layout_marginBottom="10dp"

                android:background="@drawable/answertxt_background"

                android:padding="2dp" />



            <TextView
                android:id="@+id/achievementPerfectScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Has sacado tu primer 5/5"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"

                android:padding="2dp"

                android:background="@drawable/answertxt_background"

                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/achievement_avatar_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Has cambiado tu avatar por primera vez"
                android:textSize="25sp"
                android:fontFamily="@font/play"
                android:textColor="?attr/titles"

                android:background="@drawable/answertxt_background"

                android:layout_marginBottom="10dp"

                android:padding="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
